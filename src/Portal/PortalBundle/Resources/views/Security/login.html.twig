{% extends "PortalBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


        <div class="row">
            <div class="col-md-12">
                <div class="wrap">
                    <p class="form-title">
                        Sign In</p>
                    <form action="{{ path("fos_user_security_check") }}" method="post" class="login">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <input type="text" id="username" name="_username" placeholder="Username" required="required"/>
                        <input type="password" id="password" name="_password" required="required" placeholder="Password" />
                        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-success btn-sm" />
                    </form>
                </div>
            </div>
        </div>


{% endblock fos_user_content %}







